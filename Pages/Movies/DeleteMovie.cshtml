@page
@model InfoFlixProject.Pages.Movies.DeleteMovieModel
@{
    ViewData["Title"] = "Delete Movie";
}

<div class="justify-content-center text-center">
    <h2 class="display-">Are you sure you want to delete the following movie:<br/>@Model.Movie.Title</h2>
    <br/>
    <form method="post">
        <button type="submit" class="btn btn-danger btn-sm" role="button">Confirm</button>
        <a class="btn btn-dark btn-sm" asp-page="/Movies/Index" role="button">Cancel</a>
    </form>
</div>
<hr/>



<br/>

<div class="text-center">
    <center>
        <div class="card m-3" style="min-width: 18rem; max-width:30.5%">
            <a asp-page="/Movies/MovieDetails" asp-route-ID="@Model.Movie.Id">
                <img class="card-img-top" src="@Model.Movie.ImageUrl" alt="Card image cap">
            </a>
            <div class="card-body">
                <h5 class="card-title text-center">@Model.Movie.Title</h5>
                <center><p class="card-text font-weight-bold">@Model.Movie.ReleaseDate</p></center>
                <br />
            </div>
        </div>
    </center>
    <hr>
    <br />
</div>

